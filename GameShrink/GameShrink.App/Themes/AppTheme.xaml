<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes"
                    xmlns:sys="clr-namespace:System;assembly=mscorlib">

  <!-- App brushes (populated/overridden by ThemeManager) -->
  <SolidColorBrush x:Key="App.Brush.WindowBackground" Color="#FFFFFF" />
  <SolidColorBrush x:Key="App.Brush.CardBackground" Color="#FFFFFF" />
  <SolidColorBrush x:Key="App.Brush.CardAltBackground" Color="#F3F4F6" />
  <SolidColorBrush x:Key="App.Brush.HelperText" Color="#6B7280" />

  <!-- Typography -->
  <FontFamily x:Key="App.Font">Segoe UI Variable Text, Segoe UI</FontFamily>

  <Style TargetType="TextBlock">
    <Setter Property="FontFamily" Value="{StaticResource App.Font}" />
  </Style>

  <Style TargetType="TextBox">
    <Setter Property="FontFamily" Value="{StaticResource App.Font}" />
  </Style>

  <Style TargetType="PasswordBox">
    <Setter Property="FontFamily" Value="{StaticResource App.Font}" />
  </Style>

  <Style TargetType="ComboBox">
    <Setter Property="FontFamily" Value="{StaticResource App.Font}" />
  </Style>

  <!-- Layout metrics -->
  <Thickness x:Key="App.PagePadding">24</Thickness>
  <Thickness x:Key="App.SectionSpacing">0,0,0,16</Thickness>
  <!-- MaterialDesign Card.UniformCornerRadius expects a double (uniform radius), not a CornerRadius -->
  <sys:Double x:Key="App.CardRadius">14</sys:Double>

  <!-- Cards -->
  <Style x:Key="AppCard" TargetType="md:Card">
    <Setter Property="Padding" Value="16" />
    <Setter Property="Margin" Value="0,0,0,16" />
    <Setter Property="UniformCornerRadius" Value="{StaticResource App.CardRadius}" />
    <Setter Property="Background" Value="{DynamicResource App.Brush.CardBackground}" />
  </Style>

  <!-- DataGrid: cleaner look -->
  <Style TargetType="DataGrid">
    <Setter Property="RowHeaderWidth" Value="0" />
    <Setter Property="HeadersVisibility" Value="Column" />
    <Setter Property="GridLinesVisibility" Value="None" />
    <Setter Property="BorderThickness" Value="0" />
    <Setter Property="Background" Value="Transparent" />
    <Setter Property="RowBackground" Value="Transparent" />
    <Setter Property="AlternatingRowBackground" Value="{DynamicResource App.Brush.CardAltBackground}" />
  </Style>

  <Style TargetType="DataGridColumnHeader">
    <Setter Property="FontWeight" Value="SemiBold" />
  </Style>

  <!-- Buttons: icon+text helpers -->
  <Style x:Key="AppIconButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
    <Setter Property="Padding" Value="12,8" />
    <Setter Property="Height" Value="36" />
    <Setter Property="MinWidth" Value="120" />
  </Style>

  <Style x:Key="AppPrimaryButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignRaisedButton}">
    <Setter Property="Padding" Value="14,8" />
    <Setter Property="Height" Value="40" />
    <Setter Property="MinWidth" Value="140" />
  </Style>

  <Style x:Key="AppDangerButton" TargetType="Button" BasedOn="{StaticResource MaterialDesignOutlinedButton}">
    <Setter Property="Padding" Value="14,8" />
    <Setter Property="Height" Value="40" />
    <Setter Property="MinWidth" Value="170" />
    <Setter Property="BorderBrush" Value="{DynamicResource MaterialDesignValidationErrorBrush}" />
    <Setter Property="Foreground" Value="{DynamicResource MaterialDesignValidationErrorBrush}" />
  </Style>

  <!-- Subtle helper text -->
  <Style x:Key="AppHelperText" TargetType="TextBlock">
    <Setter Property="Foreground" Value="{DynamicResource App.Brush.HelperText}" />
    <Setter Property="FontSize" Value="12" />
  </Style>

</ResourceDictionary>
