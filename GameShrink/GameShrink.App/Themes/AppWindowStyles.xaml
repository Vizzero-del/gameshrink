<ResourceDictionary xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
                    xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
                    xmlns:md="http://materialdesigninxaml.net/winfx/xaml/themes">

  <!-- Window baseline -->
  <Style TargetType="Window">
    <Setter Property="FontFamily" Value="Segoe UI Variable Text, Segoe UI" />
    <Setter Property="Background" Value="{DynamicResource App.Brush.WindowBackground}" />
  </Style>

  <!-- TabControl: Material tabs layout -->
  <Style TargetType="TabControl" BasedOn="{StaticResource MaterialDesignTabControl}">
    <Setter Property="Margin" Value="0" />
  </Style>

  <Style TargetType="TabItem" BasedOn="{StaticResource MaterialDesignTabItem}">
    <Setter Property="Padding" Value="16,10" />
  </Style>

  <!-- Status bar -->
  <Style TargetType="StatusBar">
    <Setter Property="Background" Value="{DynamicResource App.Brush.CardBackground}" />
    <Setter Property="BorderThickness" Value="0" />
  </Style>

</ResourceDictionary>
